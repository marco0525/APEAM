@{
    ViewData["Title"] = "Home Page";
    var cantidad = 0;
}

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>PRODUCT0</th>
            <th>CANTIDAD</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Productos)
        {
            <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                @foreach (var item2 in ViewBag.RegistroTransaccions)
                {
                    if (item2.IdProducto == item.Id && item2.Accion == "Entrada")
                    {
                        cantidad=cantidad+item2.Cantidad;
                    }
                    else if (item2.IdProducto == item.Id && item2.Accion == "Salida")
                    {
                        cantidad=cantidad-item2.Cantidad;
                    }
                }
                <td>@cantidad</td>
                @{
                    cantidad = 0;
                }
            </tr>
        }
    </tbody>
</table>
